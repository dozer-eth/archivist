{
  "manifest_version": 3,
  "name": "Open in Archive.is (Latest)",
  "version": "0.1.0",
  "description": "Open the latest archive.is snapshot of the current page.",
  "permissions": ["activeTab", "contextMenus", "tabs", "webNavigation"],
  "host_permissions": [
    "*://nytimes.com/*",
    "*://*.nytimes.com/*"
  ],
  "action": {
    "default_title": "Open latest archive.is snapshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-latest-archive": {
      "suggested_key": {
        "mac": "Command+Shift+U"
      },
      "description": "Open latest archive.is snapshot"
    }
  }
}
