{
  "manifest_version": 3,
  "name": "Archivist",
  "version": "0.1.0",
  "description": "Automatically open archive.is snapshots",
  "permissions": ["activeTab", "contextMenus", "tabs", "webNavigation", "storage"],
  "action": {
    "default_title": "Automatically open archive.is snapshots"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "commands": {
    "open-latest-archive": {
      "suggested_key": {
        "mac": "Command+Shift+U"
      },
      "description": "Open latest archive.is snapshot"
    }
  }
}
